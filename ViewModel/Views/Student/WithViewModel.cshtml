@using ViewModel.Models
@model Marksheet


@{
    ViewBag.Title = "WithViewModel";
}

<h2>WithViewModel</h2>
<div class="row">
    <div class="col-sm-3">
        <label>Roll No: </label>
        <label>@Model.MyStudent.Rollno</label>
    </div>
    <div class="col-sm-9">
        <label>Name: </label>
        <label>@Model.MyStudent.Name</label>
    </div>
</div>
<table class="table">
    <tr>
        <th>C# Marks</th>
        <td>@Model.MyAssessment.CSharpMarks</td>
    </tr>
    <tr>
        <th>MVC Marks</th>
        <td>@Model.MyAssessment.MVCMarks</td>
    </tr>
    <tr>
        <th>Bootstrap Marks</th>
        <td>@Model.MyAssessment.BootStrapMarks</td>
    </tr>
    <tr>
        <th>Total marks</th>
        <td>@Model.Total</td>
    </tr>
</table>

